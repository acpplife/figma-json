{
  "name": "figma-json",
  "version": "1.0.0",
  "description": "A CLI tool for downloading Figma file data as JSON",
  "main": "dist/index.js",
  "bin": {
    "figma-json": "dist/index.js"
  },
  "homepage": "https://github.com/acpplife/figma-json#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acpplife/figma-json.git"
  },
  "bugs": {
    "url": "https://github.com/acpplife/figma-json/issues"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-all": "npm run type-check && npm run lint && npm run test",
    "prepare": "husky install",
    "prepublishOnly": "npm run check-all && npm run build"
  },
  "keywords": [
    "figma",
    "cli",
    "json",
    "download",
    "api",
    "design",
    "tool",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "axios": "^1.5.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run type-check",
      "eslint --fix",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
